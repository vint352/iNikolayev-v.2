{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.1.6",

  "default_locale": "ru",

  "icons": {
    "16": "inikolayev/logo16.png",
    "128": "inikolayev/logo128.png"
  },

  "permissions": [
  "storage",
  "contextMenus",
  "tabs"
],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "inikolayev/bg.js"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["inikolayev/inikolayev.js"]
    }
  ],

  "options_page": "inikolayev/options/options.html"
}
